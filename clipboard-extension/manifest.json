{
    "manifest_version": 3,
    "name": "ClipCache - Clipboard Manager",
    "version": "1.0.0",
    "description": "A simple clipboard history manager for your browser",
    
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
  
    "permissions": [
      "storage",
      "activeTab"
    ],
  
    "action": {
      "default_popup": "popup.html",
      "default_title": "ClipCache - Click to view clipboard history"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
      }
    ],
  
    "background": {
      "service_worker": "background.js"
    },
  
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+V",
          "mac": "Command+Shift+V"
        },
        "description": "Open clipboard history"
      }
    }
  }